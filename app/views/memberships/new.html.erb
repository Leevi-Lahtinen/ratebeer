<h1>New membership for a Beer Club</h1>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited rating from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs.reject { |bc| current_user.beer_clubs.include?(bc) }, :id, :to_s) %>
  <%= f.submit %>

<% end %>